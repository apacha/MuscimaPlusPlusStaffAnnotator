<Window x:Class="MuscimaPlusPlusStaffAnnotator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuscimaPlusPlusStaffAnnotator"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1000"
        Width="1600"
        Loaded="Window_Loaded"
        PreviewKeyUp="Window_PreviewKeyUp">
    <Grid>
        <TextBox x:Name="currentImageTextBox"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="10,52,0,0"
                 TextWrapping="Wrap"
                 Text="TextBox"
                 VerticalAlignment="Top"
                 Width="149" />
        <TextBox x:Name="textBoxFileResults"
                 Height="65"
                 Margin="574,10,10,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top" />
        <Button x:Name="button"
                Content="Previous"
                HorizontalAlignment="Left"
                Margin="10,10,0,0"
                VerticalAlignment="Top"
                Width="55"
                Click="ButtonPreviousImageClick" />
        <Button x:Name="button1"
                Content="Next"
                HorizontalAlignment="Left"
                Margin="70,10,0,0"
                VerticalAlignment="Top"
                Width="50"
                Click="ButtonNextImageClick" />
        <ScrollViewer Margin="10,80,10,10"
                      HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Image x:Name="image"
                       Margin="5"
                       Stretch="None"
                       MouseLeftButtonDown="image_MouseLeftButtonDown"
                       PreviewMouseMove="image_PreviewMouseMove"
                       PreviewKeyUp="image_PreviewKeyUp" />
                <Canvas x:Name="imageCanvas"
                        Margin="5"
                        PreviewMouseUp="imageCanvas_PreviewMouseUp"
                        PreviewKeyUp="imageCanvas_PreviewKeyUp" />
            </Grid>
        </ScrollViewer>
        <TextBlock x:Name="coordinatesTextBlock"
                   HorizontalAlignment="Left"
                   Margin="172,52,0,0"
                   TextWrapping="Wrap"
                   Text="TextBlock"
                   VerticalAlignment="Top"
                   Height="23"
                   Width="92" />
        <TextBox x:Name="coordinatesTextBox"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="131,10,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 Width="358" />
    </Grid>
</Window>
